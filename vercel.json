{
  "functions": {
    "app/api/auth/forgot-password/route.ts": {
      "maxDuration": 30
    },
    "app/api/auth/reset-password/route.ts": {
      "maxDuration": 30
    },
    "app/api/auth/validate-reset-token/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/auth/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/forgot-password",
      "destination": "/api/auth/forgot-password"
    },
    {
      "source": "/api/auth/reset-password",
      "destination": "/api/auth/reset-password"
    },
    {
      "source": "/api/auth/validate-reset-token",
      "destination": "/api/auth/validate-reset-token"
    }
  ]
}
